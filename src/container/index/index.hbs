<main class="main">
	<h1 class="h1">To-do list</h1>
	<div class="add-container">
		<input class="add-input" type="text" placeholder="Введіть задачу...">
		<button class="add-button button">Додати</button>
	</div>
	<ul class="task-list">
	</ul>
</main>

<template id="task">
	<li class="task">
		<div class="task-content">
			<span class="task-number">1.</span>
			<p class="task-info">Some placeholder content in a paragraph below the heading and date.</p>
		</div>
		<div class="task-actions">
			<button class="button-task-do button"></button>
			<button class="button-task-cancel button"></button>
		</div>
	</li>
</template>

<div class="confirm-del-cont" id="confirm-del">
	<div class="confirm-del">
		<p class="confirm-del-text">Видалити цю задачу?</p>
		<div class="confirm-del-actions">
			<button class="confirm-del-cancel button">повернутись</button>
			<button class="confirm-del-delete button">видалити</button>
		</div>
	</div>
</div>